<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title text-center mb-4">Your Profile</h1>

          <div class="text-center mb-4">
            <p>Email: <%= @user.email %></p>

            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, class: "rounded-circle", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% else %>
              <%= image_tag "https://avatar.iran.liara.run/public/47", class: "rounded-circle", style: "width: 100px; height: 100px; object-fit: cover;" %>
            <% end %>
          </div>

          <div class="text-center">
            <%= link_to 'Edit Profile', edit_user_registration_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>