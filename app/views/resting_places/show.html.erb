<div class="container">
 <h2><%= @resort.title %></h2>
 <p>Hotel Location: <%= @resort.location %></p>
 <p>Hotel Description: <%= @resort.description %></p>
 
   <h3 style="margin-left: 10px">Room number: <%= @resting_place.room_number %></h3>
   <p style="margin-left: 20px"><i>Room Description: <%= @resting_place.room_description %></i></p>
   <p style="margin-left: 20px"><i>Bed capacity: <%= @resting_place.bed_count %></i></p>
   <b style="margin-left: 20px">Price per night: <%= @resting_place.price_per_night %>$</b>
   <hr>

  <div class="row justify-content-center">
    <div class="col-6">
      <h2 class="text-center">Fill in the booking form and we'll call you back</h2>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-4">
      <%= render 'forms/booking_form' %>
    </div>
  </div>
</div>
   


